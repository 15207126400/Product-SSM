<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunwei.product.common.dao.YwProductAttributevalueDao">

    <sql id="insertSql">
       attrvalue_name,attrname_id
    </sql>
    
    <sql id="sql">
       attrvalue_id,attrvalue_name,attrname_id
    </sql>
    
    <sql id = "whereSql">
	     <where>
	        <if test="attrvalue_id != null and attrvalue_id != '' ">
	          <!-- like CONCAT(CONCAT('%',#{attrvalue_id}),'%') -->
	          and attrvalue_id = #{attrvalue_id}
	        </if>
	        <if test="attrname_id != null and attrname_id != '' ">
	          and attrname_id = #{attrname_id}
	        </if>
	    </where> 
    </sql>

	<!-- 字典保存 -->
	<insert id="insert" parameterType="com.yunwei.product.common.model.YwProductAttributevalue" useGeneratedKeys="true" keyProperty="attrvalue_id">
		insert into yw_product_attributevalue(<include refid="insertSql"/>) values(#{attrvalue_name},#{attrname_id})
	</insert>
	
	<!-- 查询所有字典信息-->
	<select id="queryList" parameterType="java.util.Map" resultType="com.yunwei.product.common.model.YwProductAttributevalue">
		select <include refid="sql"/> from yw_product_attributevalue
		<include refid="whereSql"/>
	</select>
	
	<!-- 查询分页信息 -->
	<select id="queryListPage" parameterType="java.util.Map" resultType="com.yunwei.product.common.model.YwProductAttributevalue">
		select <include refid="sql"/> from yw_product_attributevalue
		<include refid="whereSql"/>
		limit #{begin},#{end}
	</select>
	
	<!-- 查询总条数 -->
	<select id="queryTotals" parameterType="java.util.Map" resultType="int">
		select count(1) from yw_product_attributevalue
		<include refid="whereSql"/>
	</select>
	
	<update id="update" parameterType="java.util.Map">
	    update yw_product_attributevalue
	     <trim prefix="set" suffixOverrides=",">
	      <if test="attrvalue_id != null and attrvalue_id != '' ">
	           attrvalue_id = #{attrvalue_id},
	      </if>
	      <if test="attrvalue_name != null and attrvalue_name != ''">
	           attrvalue_name = #{attrvalue_name},
	      </if>
	      <if test="attrname_id != null and attrname_id != '' ">
	           attrname_id = #{attrname_id},
	      </if>
	    </trim>
	    <include refid="whereSql"/>
	</update>
	
	<delete id="delete" parameterType="java.util.Map">
	    delete from yw_product_attributevalue 
	    <include refid="whereSql"/>
	</delete>
	
	<!-- 批量插入 -->
	<insert id="insertBatch" parameterType="java.util.List">
        insert into yw_product_attributevalue (<include refid="insertSql"/>)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.attrvalue_name},#{item.attrname_id})
        </foreach>
    </insert>
	
</mapper>