<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunwei.product.common.dao.YwDistributorCommissionrecordDao">

    <sql id="insertSql">
       dis_com_type,user_id,create_user_id,order_id,dis_com_money,dis_com_createtime,dis_com_updatetime,dis_com_status,dis_com_remark
    </sql>
    
    <sql id="sql">
       dis_com_id,dis_com_type,user_id,create_user_id,order_id,dis_com_money,dis_com_createtime,dis_com_updatetime,dis_com_status,dis_com_remark
    </sql>
    
    <sql id = "whereSql">
	     <where>
	        <if test="dis_com_id != null and dis_com_id != '' ">
	          <!-- like CONCAT(CONCAT('%',#{user_id}),'%') -->
	          and dis_com_id = #{dis_com_id}
	        </if>
	        <if test="user_id != null and user_id != '' ">
	          <!-- like CONCAT(CONCAT('%',#{user_id}),'%') -->
	          and user_id = #{user_id}
	        </if>
	        <if test="dis_com_type != null and dis_com_type != '' ">
		      and dis_com_type = #{dis_com_type}
		    </if>
		    <if test="order_id != null and order_id != '' ">
		      and order_id = #{order_id}
		    </if>
	    </where> 
    </sql>
    
    <sql id="whereBatchSql">
		<where>
			<if test="dis_com_id != null and dis_com_id != '' ">
				and dis_com_id in
				<foreach collection="dis_com_id" item="id" separator="," open="("
					close=")">
					#{id}
				</foreach>
			</if>
		</where>
	</sql>

	<!-- 字典保存 -->
	<insert id="insert" parameterType="com.yunwei.product.common.model.YwDistributorCommissionrecord">
		insert into yw_distributor_commissionrecord(<include refid="insertSql"/>) values(#{dis_com_type},#{user_id},#{create_user_id},#{order_id},#{dis_com_money},#{dis_com_createtime},#{dis_com_updatetime},#{dis_com_status},#{dis_com_remark})
	</insert>
	
	<!-- 查询所有字典信息-->
	<select id="queryList" parameterType="java.util.Map" resultType="com.yunwei.product.common.model.YwDistributorCommissionrecord">
		select <include refid="sql"/> from yw_distributor_commissionrecord
		<include refid="whereSql"/>
	</select>
	
	<!-- 查询表该表与其他表关联信息-->
	<select id="queryUnionMemberList" parameterType="java.util.Map"
		resultType="com.yunwei.product.common.backend.model.dto.YwCommissionrecordDto">
		select
			c.dis_com_id,
			c.dis_com_type,
			c.user_id,
			c.create_user_id,
			c.order_id,
			c.dis_com_money,
			c.dis_com_createtime,
			c.dis_com_updatetime,
			c.dis_com_status,
			c.dis_com_remark,
			m.openid,
			m.nickname,
			d.dis_id,
			d.dis_level
		from yw_distributor_commissionrecord c
			left join yw_member m on c.create_user_id = m.openid
			left join yw_distributor d on c.create_user_id = d.dis_id
			<where>
		        <if test="dis_com_id != null and dis_com_id != '' ">
		          and dis_com_id = #{dis_com_id}
		        </if>
		        <if test="user_id != null and user_id != '' ">
		          and user_id = #{user_id}
		        </if>
		        <if test="dis_com_type != null and dis_com_type != '' ">
		          and dis_com_type = #{dis_com_type}
		        </if>
		        <if test="order_id != null and order_id != '' ">
			      and order_id = #{order_id}
			    </if>
	    	</where> 
			order by dis_com_createtime desc
			<if test="begin != null and begin != '' ">
				limit #{begin},#{end}
			</if>
	</select>
	
	<!-- 查询分页信息 -->
	<select id="queryListPage" parameterType="java.util.Map" resultType="com.yunwei.product.common.model.YwDistributorCommissionrecord">
		select <include refid="sql"/> from yw_distributor_commissionrecord
		<include refid="whereSql"/>
		limit #{begin},#{end}
	</select>
	
	<!-- 查询总条数 -->
	<select id="queryTotals" parameterType="java.util.Map" resultType="int">
		select count(1) from yw_distributor_commissionrecord
		<include refid="whereSql"/>
	</select>
	
	<update id="update" parameterType="java.util.Map">
	    update yw_distributor_commissionrecord
	     <trim prefix="set" suffixOverrides=",">
	     <if test="dis_com_type != null and dis_com_type != '' ">
	           dis_com_type = #{dis_com_type},
	      </if>
	      <if test="user_id != null and user_id != '' ">
	           user_id = #{user_id},
	      </if>
	      <if test="create_user_id != null and create_user_id != '' ">
	           create_user_id = #{create_user_id},
	      </if>
	      <if test="order_id != null and order_id != '' ">
	           order_id = #{order_id},
	      </if>
	      <if test="dis_com_money != null and dis_com_money != '' ">
	           dis_com_money = #{dis_com_money},
	      </if>
	      <if test="dis_com_createtime != null and dis_com_createtime != '' ">
	           dis_com_createtime = #{dis_com_createtime},
	      </if>
	      <if test="dis_com_updatetime != null and dis_com_updatetime != '' ">
	           dis_com_updatetime = #{dis_com_updatetime},
	      </if>
	      <if test="dis_com_status != null and dis_com_status != '' ">
	           dis_com_status = #{dis_com_status},
	      </if>
	      <if test="dis_com_remark != null and dis_com_remark != '' ">
	           dis_com_remark = #{dis_com_remark},
	      </if>
	    </trim>
	    <include refid="whereSql"/>
	</update>
	
	<delete id="delete" parameterType="java.util.Map">
	    delete from yw_distributor_commissionrecord 
	    <include refid="whereSql"/>
	</delete>
	
	<delete id="deleteBatch" parameterType="java.util.Map">
	   delete from yw_distributor_commissionrecord
	   <include refid="whereBatchSql"/>
	</delete>
	
</mapper>