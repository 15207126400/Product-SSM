	<!-- 当前表查询 -->
	<select id="queryList" parameterType="java.util.Map" resultType="com.yunwei.product.common.model.QhzArticle">
		select <include refid="sql"/> from qhz_article
		<include refid="whereSql"/>
		order by id
	</select>
	
	<!-- 当前表分页查询(Map参数) -->
	<select id="queryListPage" parameterType="java.util.Map" resultType="com.yunwei.product.common.model.QhzArticle">
		<!-- 
		select <include refid="sql"/> from qhz_article
		<include refid="whereSql"/>
		order by id
		limit #{begin},#{end}
		 -->
		select <include refid="unionSql"/> from qhz_article a
		inner join (select id from qhz_article <include refid="whereUnionSql" /> order by id limit #{begin},#{end}) b on a.id = b.id
	</select>
	
	<!-- 当前表联合查询(Map参数)(1、子表关联查询，2、不同类型表关联查询) -->
	<select id="queryUnionList" parameterType="java.util.Map" resultMap="resultMap">
		select <include refid="unionSql"/> from qhz_article as a
		<include refid="whereUnionSql"/>
		order by id
	</select>
	
	<!-- 当前表联合分页查询)(Map参数)(1、子表关联查询，2、不同类型表关联查询) -->
	<select id="queryUnionListPage" parameterType="java.util.Map" resultMap="resultMap">
		select <include refid="unionSql"/> from qhz_article as a
		<include refid="whereUnionSql"/>
		<!-- 分页查询，通过begin条件区别 -->
		<include refid="pageSql"/>
		order by id
	</select>
	
	<!-- 当前表查询总条数 -->
	<select id="queryTotals" parameterType="java.util.Map" resultType="int">
		select count(1) from qhz_article
		<include refid="whereSql"/>
	</select>
	
	<!-- 当前表更新 -->
	<update id="update" parameterType="java.util.Map">
	    update qhz_article
	     <trim prefix="set" suffixOverrides=",">
            <if test="type != null and type != '' ">
	           type = #{type},
	        </if>
	        <if test="scene_type != null and scene_type != '' ">
