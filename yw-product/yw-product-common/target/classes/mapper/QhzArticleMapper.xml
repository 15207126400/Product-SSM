	    delete from qhz_article
	    <where>
            <if test="id != null and id != '' ">
	           and id = #{id}
	        </if>
	    </where>
	</delete>
	
	<!-- 当前批量删除 -->
	<delete id="deleteBatch" parameterType="java.util.Map">
	   delete from qhz_article
	   <include refid="whereBatchSql"/>
	</delete>
	
</mapper>