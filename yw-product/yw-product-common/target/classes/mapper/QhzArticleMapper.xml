            <if test="id != null and id != '' ">
	          and id = #{id}
	        </if>
            <if test="type != null and type != '' ">
	          and type = #{type}
	        </if>
	        <if test="scene_type != null and scene_type != '' ">
	          and scene_type = #{scene_type}
	        </if>
            <if test="title != null and title != '' ">
