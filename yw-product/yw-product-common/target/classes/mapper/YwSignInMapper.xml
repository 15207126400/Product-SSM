<mapper namespace="com.yunwei.product.common.dao.YwSignInDao">

    <sql id="sql">
         signIn_id,
         user_id,
         signIn_last_date,
         signIn_continue_day,
         signIn_status,
         signIn_updatetime
    </sql>
    
    <sql id="insertSql">
         user_id,
         signIn_last_date,
         signIn_continue_day,
         signIn_status,
         signIn_updatetime
    </sql>
    <!-- 当前表条件 -->
    <sql id = "whereSql">
	   <where>
            <if test="signIn_id != null and signIn_id != '' ">
	          and signIn_id = #{signIn_id}
	        </if>
            <if test="user_id != null and user_id != '' ">
	          and user_id = #{user_id}
	        </if>
            <if test="signIn_last_date != null and signIn_last_date != '' ">
	          and signIn_last_date = #{signIn_last_date}
	        </if>
            <if test="signIn_continue_day != null and signIn_continue_day != '' ">
	          and signIn_continue_day = #{signIn_continue_day}
	        </if>
            <if test="signIn_status != null and signIn_status != '' ">
	          and signIn_status = #{signIn_status}
	        </if>
            <if test="signIn_updatetime != null and signIn_updatetime != '' ">
	          and signIn_updatetime = #{signIn_updatetime}
	        </if>
	    </where> 
    </sql>
    
    <!-- 当前表(或不存在当前表)条件(Map参数) -->
    <sql id = "whereMapSql">
	   <where>
            <if test="signIn_id != null and signIn_id != '' ">
	          and signIn_id = #{signIn_id}
	        </if>
            <if test="user_id != null and user_id != '' ">
	          and user_id = #{user_id}
	        </if>
            <if test="signIn_last_date != null and signIn_last_date != '' ">
	          and signIn_last_date = #{signIn_last_date}
	        </if>
            <if test="signIn_continue_day != null and signIn_continue_day != '' ">
	          and signIn_continue_day = #{signIn_continue_day}
	        </if>
            <if test="signIn_status != null and signIn_status != '' ">
	          and signIn_status = #{signIn_status}
	        </if>
            <if test="signIn_updatetime != null and signIn_updatetime != '' ">
	          and signIn_updatetime = #{signIn_updatetime}
	        </if>
	    </where> 
    </sql>
    
    <!-- 当前表批量删除条件 -->
    <sql id="whereBatchSql">
		<where>
			<if test="signIn_id != null and signIn_id != '' ">
				and signIn_id in
				<foreach collection="signIn_id" item="id" separator="," open="("
					close=")">
					#{id}
				</foreach>
			</if>
		</where>
	</sql>

	<!-- 当前表添加-->
	<insert id="insert" parameterType="com.yunwei.product.common.model.YwSignIn">
		insert into yw_signIn(<include refid="insertSql"/>) 
		values(
	             #{user_id},
	             #{signIn_last_date},
	             #{signIn_continue_day},
	             #{signIn_status},
	             #{signIn_updatetime}
		     )
	</insert>
	
	<!-- 查询表该表与其他表关联信息-->
	<select id="queryUnionMemberList" parameterType="java.util.Map"
		resultType="com.yunwei.product.common.backend.model.dto.YwSignInDto">
		select
			 s.signIn_id,
	         s.user_id,
	         s.signIn_last_date,
	         s.signIn_continue_day,
	         s.signIn_status,
	         s.signIn_updatetime,
	         m.openid,
	         m.nickname
			
		from yw_signIn s
			left join yw_member m on s.user_id = m.openid
			<where>
				<if test="signIn_id != null and signIn_id != '' ">
		          and signIn_id = #{signIn_id}
		        </if>
		    </where> 
			order by signIn_id
			<if test="begin != null and begin != '' ">
				limit #{begin},#{end}
			</if>
	</select>
	
	<!-- 当前表查询 -->
	<select id="queryList" parameterType="java.util.Map" resultType="com.yunwei.product.common.model.YwSignIn">
		select <include refid="sql"/> from yw_signIn
		<include refid="whereSql"/>
	</select>
	
	<!-- 当前表分页查询(Map参数) -->
	<select id="queryListPage" parameterType="java.util.Map" resultType="com.yunwei.product.common.model.YwSignIn">
		select <include refid="sql"/> from yw_signIn
		<include refid="whereSql"/>
		order by signIn_id desc
		limit #{begin},#{end}
	</select>
	
	<!-- 当前表查询总条数 -->
	<select id="queryTotals" parameterType="java.util.Map" resultType="int">
		select count(1) from yw_signIn
		<include refid="whereSql"/>
	</select>
	
	<!-- 当前表更新 -->
	<update id="update" parameterType="java.util.Map">
	    update yw_signIn
	     <trim prefix="set" suffixOverrides=",">
            <if test="user_id != null and user_id != '' ">
	           user_id = #{user_id},
	        </if>
            <if test="signIn_last_date != null">
	           signIn_last_date = #{signIn_last_date},
	        </if>
            <if test="signIn_continue_day != null and signIn_continue_day != '' ">
	           signIn_continue_day = #{signIn_continue_day},
	        </if>
            <if test="signIn_status != null and signIn_status != '' ">
	           signIn_status = #{signIn_status},
	        </if>
            <if test="signIn_updatetime != null">
	           signIn_updatetime = #{signIn_updatetime},
	        </if>
	    </trim>
	    <where>
             <if test="signIn_id != null and signIn_id != '' ">
	           and signIn_id = #{signIn_id}
	         </if>
	    </where>
	</update>
	
	<!-- 当前表删除 -->
	<delete id="delete" parameterType="java.util.Map">
	    delete from yw_SignIn 
	    <where>
            <if test="signIn_id != null and signIn_id != '' ">
	           and signIn_id = #{signIn_id}
	        </if>
	    </where>
	</delete>
	
	<!-- 当前批量删除 -->
	<delete id="deleteBatch" parameterType="java.util.Map">
	   delete from yw_signIn
	   <include refid="whereBatchSql"/>
	</delete>
	
</mapper>