<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunwei.product.common.dao.YwPointsDao">

    <sql id="sql">
         points_id,
         points_totals,
         user_id,
         points_createtime,
         points_updatetime
    </sql>
    
    <sql id="insertSql">
         points_totals,
         user_id,
         points_createtime,
         points_updatetime
    </sql>
    <!-- 当前表条件 -->
    <sql id = "whereSql">
	   <where>
            <if test="points_id != null and points_id != '' ">
	          and points_id = #{points_id}
	        </if>
            <if test="points_totals != null and points_totals != '' ">
	          and points_totals = #{points_totals}
	        </if>
            <if test="user_id != null and user_id != '' ">
	          and user_id = #{user_id}
	        </if>
            <if test="points_createtime != null and points_createtime != '' ">
	          and points_createtime = #{points_createtime}
	        </if>
            <if test="points_updatetime != null and points_updatetime != '' ">
	          and points_updatetime = #{points_updatetime}
	        </if>
	    </where> 
    </sql>
    
    <!-- 当前表(或不存在当前表)条件(Map参数) -->
    <sql id = "whereMapSql">
	   <where>
            <if test="points_id != null and points_id != '' ">
	          and points_id = #{points_id}
	        </if>
            <if test="points_totals != null and points_totals != '' ">
	          and points_totals = #{points_totals}
	        </if>
            <if test="user_id != null and user_id != '' ">
	          and user_id = #{user_id}
	        </if>
            <if test="points_createtime != null and points_createtime != '' ">
	          and points_createtime = #{points_createtime}
	        </if>
            <if test="points_updatetime != null and points_updatetime != '' ">
	          and points_updatetime = #{points_updatetime}
	        </if>
	    </where> 
    </sql>
    
    <!-- 当前表批量删除条件 -->
    <sql id="whereBatchSql">
		<where>
			<if test="points_id != null and points_id != '' ">
				and points_id in
				<foreach collection="points_id" item="id" separator="," open="("
					close=")">
					#{id}
				</foreach>
			</if>
		</where>
	</sql>

	<!-- 当前表添加-->
	<insert id="insert" parameterType="com.yunwei.product.common.model.YwPoints">
		insert into yw_points(<include refid="insertSql"/>) 
		values(
	             #{points_totals},
	             #{user_id},
	             #{points_createtime},
	             #{points_updatetime}
		     )
	</insert>
	
	<!-- 查询表该表与其他表关联信息-->
	<select id="queryUnionMemberList" parameterType="java.util.Map"
		resultType="com.yunwei.product.common.backend.model.dto.YwPointsDto">
		select
			 p.points_id,
	         p.points_totals,
	         p.user_id,
	         p.points_createtime,
	         p.points_updatetime,
	         m.openid,
	         m.nickname
			
		from yw_points p
			left join yw_member m on p.user_id = m.openid
			<where>
				<if test="points_id != null and points_id != '' ">
		          and points_id = #{points_id}
		        </if>
		    </where> 
			order by points_id
			limit #{begin},#{end}
	</select>
	
	<!-- 当前表查询 -->
	<select id="queryList" parameterType="java.util.Map" resultType="com.yunwei.product.common.model.YwPoints">
		select <include refid="sql"/> from yw_points
		<include refid="whereSql"/>
		order by points_id
	</select>
	
	<!-- 当前表分页查询(Map参数) -->
	<select id="queryListPage" parameterType="java.util.Map" resultType="com.yunwei.product.common.model.YwPoints">
		select <include refid="sql"/> from yw_points
		<include refid="whereSql"/>
		order by points_id
		limit #{begin},#{end}
	</select>
	
	<!-- 当前表查询总条数 -->
	<select id="queryTotals" parameterType="java.util.Map" resultType="int">
		select count(1) from yw_points
		<include refid="whereSql"/>
	</select>

	<!-- 当前表更新 -->
	<update id="update" parameterType="java.util.Map">
	    update yw_points
	     <trim prefix="set" suffixOverrides=",">
            <if test="points_totals != null and points_totals != '' ">
	           points_totals = #{points_totals},
	        </if>
            <if test="user_id != null and user_id != '' ">
	           user_id = #{user_id},
	        </if>
            <if test="points_createtime != null and points_createtime != '' ">
	           points_createtime = #{points_createtime},
	        </if>
            <if test="points_updatetime != null and points_updatetime != '' ">
	           points_updatetime = #{points_updatetime},
	        </if>
	    </trim>
	    <where>
             <if test="points_id != null and points_id != '' ">
	           and points_id = #{points_id}
	         </if>
	    </where>
	</update>
	
	<!-- 当前表删除 -->
	<delete id="delete" parameterType="java.util.Map">
	    delete from yw_Points 
	    <where>
            <if test="points_id != null and points_id != '' ">
	           and points_id = #{points_id}
	        </if>
	    </where>
	</delete>
	
	<!-- 当前批量删除 -->
	<delete id="deleteBatch" parameterType="java.util.Map">
	   delete from yw_points
	   <include refid="whereBatchSql"/>
	</delete>
	
</mapper>