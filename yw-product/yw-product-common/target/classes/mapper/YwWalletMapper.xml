<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunwei.product.common.dao.YwWalletDao">

    <sql id="sql">
       wa_id,wa_type,user_id,wa_moeny,wa_createtime,wa_updatetime
    </sql>
    
    <sql id = "whereSql">
	     <where>
	        <if test="wa_id != null and wa_id != '' ">
	          <!-- like CONCAT(CONCAT('%',#{wa_id}),'%') -->
	          and wa_id = #{wa_id}
	        </if>
	        <if test="user_id != null and user_id != '' ">
	          and user_id = #{user_id}
	        </if>
	        <if test="wa_type != null and wa_type != '' ">
	          and wa_type like CONCAT(CONCAT('%',#{wa_type}),'%')
	        </if>
	    </where> 
    </sql>

	<!-- 字典保存 -->
	<insert id="insert" parameterType="com.yunwei.product.common.model.YwWallet">
		insert into yw_wallet(<include refid="sql"/>) values(#{wa_id},#{wa_type},#{user_id},#{wa_moeny},#{wa_createtime},#{wa_updatetime})
	</insert>
	
	<!-- 查询所有字典信息-->
	<select id="queryList" parameterType="java.util.Map" resultType="com.yunwei.product.common.model.YwWallet">
		select <include refid="sql"/> from yw_wallet
		<include refid="whereSql"/>
	</select>
	
	<!-- 查询分页信息 -->
	<select id="queryListPage" parameterType="java.util.Map" resultType="com.yunwei.product.common.model.YwWallet">
		select <include refid="sql"/> from yw_wallet
		<include refid="whereSql"/>
		limit #{begin},#{end}
	</select>
	
	<!-- 查询总条数 -->
	<select id="queryTotals" parameterType="java.util.Map" resultType="int">
		select count(1) from yw_wallet
		<include refid="whereSql"/>
	</select>
	
	<update id="update" parameterType="java.util.Map">
	    update yw_wallet
	     <trim prefix="set" suffixOverrides=",">
	      <if test="wa_id != null and wa_id != '' ">
	           wa_id = #{wa_id},
	      </if>
	      <if test="wa_type != null and wa_type != ''">
	           wa_type = #{wa_type},
	      </if>
	      <if test="user_id != null and user_id != '' ">
	           user_id = #{user_id},
	      </if>
	      <if test="wa_moeny != null and wa_moeny != '' ">
	           wa_moeny = #{wa_moeny},
	      </if>
	      <if test="wa_createtime != null and wa_createtime != '' ">
	           wa_createtime = #{wa_createtime},
	      </if>
	      <if test="wa_updatetime != null and wa_updatetime != '' ">
	           wa_updatetime = #{wa_updatetime},
	      </if>
	    </trim>
	    <include refid="whereSql"/>
	</update>
	
	<delete id="delete" parameterType="java.util.Map">
	    delete from yw_wallet 
	    <include refid="whereSql"/>
	</delete>
	
</mapper>