<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunwei.product.common.dao.YwSeckillRecordDao">

    <sql id="insertSql">
      record_createtime,record_updatetime,record_totalprice,seckill_id,seckill_num,seckill_price,product_price,order_sn,user_id,user_nickname,user_headurl,user_palce,record_status
    </sql>
    
    <sql id="sql">
       record_id,record_createtime,record_updatetime,record_totalprice,seckill_id,seckill_num,seckill_price,product_price,order_sn,user_id,user_nickname,user_headurl,user_palce,record_status
    </sql>
    
    <sql id = "whereSql">
	     <where>
	        <if test="record_id != null and record_id != '' ">
	          <!-- like CONCAT(CONCAT('%',#{record_id}),'%') -->
	          and record_id = #{record_id}
	        </if>
	        <if test="order_sn != null and order_sn != '' ">
	          <!-- like CONCAT(CONCAT('%',#{record_id}),'%') -->
	          and order_sn = #{order_sn}
	        </if>
	    </where> 
    </sql>
    
    
    <sql id="whereBatchSql">
		<where>
			<if test="record_id != null and record_id != '' ">
				and record_id in
				<foreach collection="record_id" item="id" separator="," open="("
					close=")">
					#{id}
				</foreach>
			</if>
		</where>
	</sql>

	<!-- 字典保存 -->
	<insert id="insert" parameterType="com.yunwei.product.common.model.YwSeckillRecord" useGeneratedKeys="true" keyColumn="record_id" keyProperty="record_id">
		insert into yw_seckill_record(<include refid="insertSql"/>) values(#{record_createtime},#{record_updatetime},#{record_totalprice},#{seckill_id},#{seckill_num},#{seckill_price},#{product_price},#{order_sn},#{user_id},#{user_nickname},#{user_headurl},#{user_palce},#{record_status})
	</insert>
	
	<!-- 查询所有字典信息-->
	<select id="queryList" parameterType="java.util.Map" resultType="com.yunwei.product.common.model.YwSeckillRecord">
		select <include refid="sql"/> from yw_seckill_record
		<include refid="whereSql"/>
	</select>
	
	<!-- 查询分页信息 -->
	<select id="queryListPage" parameterType="java.util.Map" resultType="com.yunwei.product.common.model.YwSeckillRecord">
		select <include refid="sql"/> from yw_seckill_record
		<include refid="whereSql"/>
		limit #{begin},#{end}
	</select>
	
	<!-- 查询总条数 -->
	<select id="queryTotals" parameterType="java.util.Map" resultType="int">
		select count(1) from yw_seckill_record
		<include refid="whereSql"/>
	</select>
	
	<update id="update" parameterType="java.util.Map">
	    update yw_seckill_record
	     <trim prefix="set" suffixOverrides=",">
	      <if test="record_createtime != null and record_createtime != ''">
	           record_createtime = #{record_createtime},
	      </if>
	      <if test="record_updatetime != null and record_updatetime != ''">
	           record_updatetime = #{record_updatetime},
	      </if>
	      <if test="record_totalprice != null and record_totalprice != ''">
	           record_totalprice = #{record_totalprice},
	      </if>
	      <if test="seckill_id != null and seckill_id != ''">
	           seckill_id = #{seckill_id},
	      </if>
	      <if test="seckill_num != null and seckill_num != ''">
	           seckill_num = #{seckill_num},
	      </if>
	      <if test="seckill_price != null and seckill_price != '' ">
	           seckill_price = #{seckill_price},
	      </if>
	      <if test="product_price != null and product_price != '' ">
	           product_price = #{product_price},
	      </if>
	      <if test="order_sn != null and order_sn != '' ">
	           order_sn = #{order_sn},
	      </if>
	      <if test="user_id != null and user_id != '' ">
	           user_id = #{user_id},
	      </if>
	      <if test="user_nickname != null and user_nickname != '' ">
	           user_nickname = #{user_nickname},
	      </if>
	      <if test="user_headurl != null and user_headurl != '' ">
	           user_headurl = #{user_headurl},
	      </if>
	      <if test="user_palce != null and user_palce != '' ">
	           user_palce = #{user_palce},
	      </if>
	      <if test="record_status != null and record_status != '' ">
	           record_status = #{record_status},
	      </if>
	    </trim>
	    <include refid="whereSql"/>
	</update>
	
	<delete id="delete" parameterType="java.util.Map">
	    delete from yw_seckill_record 
	    <include refid="whereSql"/>
	</delete>
	
	<delete id="deleteBatch" parameterType="java.util.Map">
	   delete from yw_seckill_record
	   <include refid="whereBatchSql"/>
	</delete>
	
</mapper>