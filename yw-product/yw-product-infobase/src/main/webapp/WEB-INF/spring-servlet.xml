	<!-- 对模型视图添加前后缀 
     <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver"
      p:prefix="/WEB-INF/" p:suffix=".jsp"/>-->

	<!-- 使用bean定义一个Interceptor，直接定义在mvc:interceptors根下面的Interceptor将拦截所有的请求 -->
	<!-- 进行拦截：/**表示拦截所有controller -->

	<mvc:interceptors>
		<bean class="com.yunwei.product.infobase.interceptor.WxDynamicDataSourceInterceptor" />
		<bean class="com.yunwei.common.interceptor.LoggerInterceptor" />
	</mvc:interceptors> 

	
	
    <!-- 文件上传 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
    	<property name="defaultEncoding" value="utf-8" />    
        <property name="maxUploadSize" value="524288"/>
        <property name="resolveLazily" value="true" />  
    </bean>  
      
	<!-- 静态资源问题，不需要进行拦截过滤，主要是针对css，js，image等资源 
	<mvc:resources mapping="/image/**" location="/image/" cache-period="31536000" /> 
	<mvc:resources mapping="/js/**" location="/js/" cache-period="31556926"/>    
	<mvc:resources mapping="/css/**" location="/css/" cache-period="31556926"/>-->
    
</beans>