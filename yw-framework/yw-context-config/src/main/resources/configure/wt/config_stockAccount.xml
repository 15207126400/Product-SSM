<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://www.hundsun.com/ooas/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.hundsun.com/ooas/config ../config.xsd">

	<validator id="judge_checkbox" type="checkbox">
		<option label="开" value="1"></option>
		<option label="关" value="0"></option>
	</validator>
	<validator id="judge_checkbox2" type="checkbox">
		<option label="开" value="1"></option>
		<option label="关" value="0"></option>
	</validator>
	<validator id="display_checkbox" type="checkbox">
		<option label="显示" value="1"></option>
		<option label="隐藏" value="0"></option>
	</validator>
	<validator id="visible_checkbox" type="checkbox">
		<option label="显示" value="visible"></option>
		<option label="隐藏" value="invisible"></option>
	</validator>
	
	<group id="stock" label="证券账户配置" display="true">
		<property name="wt_show_exchange_traded_funds" label="证券账户是否显示场内基金"
			default="1" description="">
			<validator type="checkbox" ref="judge_checkbox"></validator>
		</property>
		<property name="wt_show_stock_designated" label="证券账户是否显示指定交易"
			default="0" description="">
			<validator type="checkbox" ref="judge_checkbox"></validator>
		</property>
		<property name="wt_take_stock_need_check" label="证券账户下挂是否需要审核"
			default="0" description="默认不需要">
			<validator type="checkbox" ref="judge_checkbox"></validator>
		</property>
		<property name="wt_open_stock_need_check" label="证券账户新开是否需要审核"
			default="0" description="默认不需要">
			<validator type="checkbox" ref="judge_checkbox"></validator>
		</property>
		<!-- <property name="wt_stock_take_mode" label="证券账户下挂可多选模式"
			default="0" description="">
			<validator type="checkbox" ref="judge_checkbox"></validator>
		</property> -->
		<property name="wt_stock_accept_open_count_sz" label="证券账户允许用户开立的深圳A股账户个数"
			default="1" description="">
		</property>
		<property name="wt_stock_accept_open_count_sh" label="证券账户允许用户开立的上海A股账户个数"
			default="1" description="">
		</property>
		<property name="wt_stock_accept_take_count_sz" label="证券账户允许用户下挂的深圳A股账户个数"
			default="1" description="">
		</property>
		<property name="wt_stock_accept_take_count_sh" label="证券账户允许用户下挂的上海A股账户个数"
			default="1" description="">
		</property>
		
		<property name="wt_stock_need_submit" label="网厅是否同步证券账户到金网"
			default="0" description="只有中金需要   默认不同步">
			<validator type="checkbox" ref="judge_checkbox"></validator>
		</property>
	</group>

</config>