<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://www.hundsun.com/ooas/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.hundsun.com/ooas/config ../config.xsd">

    <property name="mail_server_host" label="邮件服务器主机" default="" description="邮件服务器IP或域名">
        <validator type="required" />
        <validator type="host" />
    </property>
    <property name="mail_server_port" label="邮件服务器端口" default="25">
        <validator type="required" />
        <validator type="range" value="[1,65535]" />
    </property>
    <property name="mail_server_auth" label="邮件服务器是否需要身份验证" default="true">
        <validator type="checkbox">
            <option value="true" label="是" />
            <option value="false" label="否" />
        </validator>
    </property>
    <group id="mail_server_auth_true">
        <property name="mail_server_username" label="邮件服务器登录用户名" default="">
        </property>
        <property name="mail_server_password" id="password" label="邮件服务器登录密码" default="">
        </property>
    </group>
    <property name="mail_send_from" label="邮件发送方邮箱" default="" description="邮件发送方邮箱">
        <validator type="required" />
        <validator type="email" />
    </property>
    <group id="mail_content" label="邮件内容">
        <property name="mail_content_bind" label="邮箱绑定" default=""
            description="邮箱绑定。示例：尊敬的客户您好。\n\t请点击http://obh.zhsec.com/my_info/mail_validate/?mailCode={0}\n\t该连接的有效期为1个小时，请在一个小时之内进行邮箱验证。谢谢。">
        </property>
    </group>
</config>